<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgboundary"
    tools:context="com.example.asus.tokengeneration.Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/linear"
        android:background="@drawable/linearcolor"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="@font/gotham_bold"
            android:textColor="#fff"
            android:id="@+id/tokengenerate"
            android:text="Token Generate"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="13dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="@font/gotham_bold"
            android:id="@+id/history"
            android:textColor="#fff"
            android:text="Get History"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="13dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/details"
            android:fontFamily="@font/gotham_bold"
            android:textColor="#fff"
            android:text="Counter Details"></TextView>
    </LinearLayout>


    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="87dp"
        android:layout_marginRight="87dp"
        android:fontFamily="@font/gotham_bold"
        android:gravity="center"
        android:text="Register Now "
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/gotham_medium"
        android:text="To Get Token Number "
        android:textColor="@color/textfield_tint"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/gotham_medium"
        android:gravity="center"
        android:text="In Amid of Covid We are providing Touchless &#38; Hustle Less Service To Our Customers "
        android:textAlignment="center"
        android:textColor="@color/textfield_tint"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/gotham_medium"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColorHint="@color/orange" />


    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/gotham_medium"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColorHint="@color/orange" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:fontFamily="@font/gotham_medium"
        android:hint="Mobile No."
        android:inputType="phone"
        android:padding="15dp"
        android:textColorHint="@color/orange" />

    <Button
        android:id="@+id/getToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/grey_other"
        android:fontFamily="@font/gotham_medium"
        android:text="Get Token"
        android:textColor="@color/orange"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/token"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/getToken"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@color/grey_other"
        android:fontFamily="@font/gotham_medium"
        android:gravity="center"
        android:text="XXX-XXX-XXX"
        android:textColor="@color/orange"
        android:textSize="22dp"
        android:textStyle="bold" />

</RelativeLayout>
